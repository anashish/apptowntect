<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/image_home_icon" />
    <View
        android:layout_width="match_parent"
        android:id="@+id/view_id"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_image_background"
        >
    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:textSize="14dp"
            android:maxLines="2"
            android:padding="5dp"
            android:textColor="@color/white_overlay"
            android:id="@+id/text_home_title"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textSize="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="@color/white_overlay"
                android:id="@+id/textView_date"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/imageView_favourite"
                android:src="@drawable/bookmarkborder"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imageView_share"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/share"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>